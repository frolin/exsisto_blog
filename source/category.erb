<% content_for :title do %>
  <%= category %>
<% end %>

<div class="category-header" id="<%= category %>">
  <div class="category-image">
    <%= image_tag "categories/#{category}.png" %>
  </div>
  <h2>
    <%= category %>
  </h2>
</div>

  <% articles.each do |article| %>
  <article class="category-post">
      <div class="category__post_image">
        <%= image_tag lorem.image('200x200') %>
      </div>
    <div class="category__post_article">
      <h4 class="category__post_title">
        <%= link_to article.title, article.url %>
      </h4>
      <div class="category__post_body">
        <%= article.summary(200) %>
      </div>
    </div>
    <span class="category__post_tags small">
      [<%= article.tags.join(', ')%>]
    </span>

    <span class="category__post_author small">
        author: <%= article.metadata[:page]['author']  %>
    </span>
  </article>
  <% end %>
