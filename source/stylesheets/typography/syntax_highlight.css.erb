<%= Rouge::Themes::ThankfulEyes.render(:scope => '.highlight') %>

.highlight {
  border-radius: 5px;
  font-family: "Pt mono";
  overflow-x: auto;
}


.highlight.ruby{
  padding-left: .5rem;
  padding-right: .5rem;
  width: 97%;
  margin-left: auto;
  margin-right: auto;
  display: block;
}

.highlight.shell{
  padding-left: .5rem;
  padding-right: .5rem;
  width: 97%;

  margin-left: auto;
  margin-right: auto;

  display: inline-block;
  font-family: "Anonymous Pro";
}